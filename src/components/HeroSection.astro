---
interface Props {
    title: string;
    subtitle?: string;
    showButton?: boolean;
    buttonText?: string;
    buttonLink?: string;
    backgroundImage?: string;
}

const { 
    title, 
    subtitle, 
    showButton = true, 
    buttonText = "File a Case", 
    buttonLink = "https://docs.google.com/",
    backgroundImage = "/images/hero-background.jpg"
} = Astro.props;
---

<section class="hero" style={`background-image: url(${backgroundImage});`}>
    <div class="container">
        <div class="hero-content">
            <h1>{title}</h1>
            {subtitle && <p class="hero-subtitle">{subtitle}</p>}
            {showButton && (
                <div class="hero-cta">
                    <a href={buttonLink} class="btn btn-accent">{buttonText}</a>
                </div>
            )}
        </div>
    </div>
</section>

<style>
    .hero {
        background-color: var(--primary-blue);
        background-size: cover;
        background-position: center;
        background-blend-mode: overlay;
        color: white;
        position: relative;
        padding: 6rem 0;
    }
    
    .hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(42, 60, 144, 0.8);
        z-index: 1;
    }
    
    .hero-content {
        position: relative;
        z-index: 2;
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
    }
    
    .hero h1 {
        color: white;
        font-size: 3rem;
        margin-bottom: var(--spacing-md);
    }
    
    .hero-subtitle {
        font-size: 1.25rem;
        margin-bottom: var(--spacing-xl);
    }
    
    .hero-cta {
        margin-top: var(--spacing-lg);
    }
    
    @media (max-width: 768px) {
        .hero {
            padding: 4rem 0;
        }
        
        .hero h1 {
            font-size: 2.25rem;
        }
        
        .hero-subtitle {
            font-size: 1.1rem;
        }
    }
</style>