---
const pathname = new URL(Astro.request.url).pathname;
const isActive = (path: string) => pathname === path || (path !== '/' && pathname.startsWith(path));
---

<header class="header">
    <div class="container">
        <div class="header-content">
            <div class="logo">
                <a href="/">
                    <img src="/images/aasra-logo.jpg" alt="Aasra Arbitrix Mediation Hub LLP" />
                </a>
            </div>

            <button class="mobile-menu-toggle" aria-label="Toggle menu">
                <span></span>
                <span></span>
                <span></span>
            </button>

            <nav class="main-nav">
                <ul>
                    <li><a href="/" class={isActive('/') ? 'active' : ''}>Home</a></li>
                    <li><a href="/about" class={isActive('/about') ? 'active' : ''}>About Us</a></li>
                    <li><a href="/services" class={isActive('/services') ? 'active' : ''}>Services</a></li>
                    <li><a href="/process" class={isActive('/process') ? 'active' : ''}>Process</a></li>
                    <li><a href="/faqs" class={isActive('/faqs') ? 'active' : ''}>FAQs</a></li>
                    <li><a href="/contact" class={isActive('/contact') ? 'active' : ''}>Contact</a></li>
                    <li><a href="https://docs.google.com/" class="btn btn-accent">File a Case</a></li>
                </ul>
            </nav>
        </div>
    </div>
</header>

<script>
    // Mobile menu toggle
    document.addEventListener('DOMContentLoaded', () => {
        const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
        const mainNav = document.querySelector('.main-nav');

        mobileMenuToggle?.addEventListener('click', () => {
            mobileMenuToggle.classList.toggle('active');
            mainNav?.classList.toggle('active');
        });
    });
</script>

<style>
    .header {
        background-color: white;
        box-shadow: var(--shadow-sm);
        position: sticky;
        top: 0;
        z-index: 1000;
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 0;
    }

    .logo img {
        height: 150px;
        width: auto;
        border-radius: 50%;
    }

    .main-nav ul {
        display: flex;
        list-style: none;
        margin: 0;
        padding: 0;
        align-items: center;
    }

    .main-nav li {
        margin-left: var(--spacing-lg);
    }

    .main-nav a {
        color: var(--neutral-800);
        font-weight: 600;
        font-size: 1rem;
        transition: color 0.3s ease;
    }

    .main-nav a:hover, .main-nav a.active {
        color: var(--primary-blue);
    }

    .main-nav a.btn {
        color: white;
    }

    .mobile-menu-toggle {
        display: none;
        background: transparent;
        border: none;
        cursor: pointer;
        padding: 0.5rem;
    }

    .mobile-menu-toggle span {
        display: block;
        height: 2px;
        width: 25px;
        background-color: var(--neutral-800);
        margin: 5px 0;
        transition: all 0.3s ease;
    }

    @media (max-width: 992px) {
        .mobile-menu-toggle {
            display: block;
        }

        .main-nav {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background-color: white;
            box-shadow: var(--shadow-md);
            height: 0;
            overflow: hidden;
            transition: height 0.3s ease;
        }

        .main-nav.active {
            height: auto;
            padding-bottom: var(--spacing-md);
        }

        .main-nav ul {
            flex-direction: column;
            align-items: flex-start;
            padding: var(--spacing-md);
        }

        .main-nav li {
            margin: var(--spacing-sm) 0;
            width: 100%;
        }

        .main-nav li:last-child {
            margin-top: var(--spacing-md);
        }

        .mobile-menu-toggle.active span:nth-child(1) {
            transform: rotate(45deg) translate(5px, 5px);
        }

        .mobile-menu-toggle.active span:nth-child(2) {
            opacity: 0;
        }

        .mobile-menu-toggle.active span:nth-child(3) {
            transform: rotate(-45deg) translate(5px, -5px);
        }
    }
</style>